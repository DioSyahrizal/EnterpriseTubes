<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.ayodolen.MainActivity"
    android:background="@color/colorWhite">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="700px"
        android:layout_height="700px"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_ayodolen"
        />

    <Button
        android:id="@+id/buttonDaftar"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/btn_shape1"
        android:text="Daftar"
        android:textSize="8pt"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMasuk"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Sudah punya akun?"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonMasuk"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/btn_shape2"
        android:textSize="8pt"
        android:text="Masuk"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
